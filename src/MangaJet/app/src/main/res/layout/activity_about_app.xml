<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aboutAppLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.options.AboutAppActivity">

    <com.google.android.material.appbar.MaterialToolbar
        app:title="@string/setting_aboutapp"
        android:id="@+id/aboutAppToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/android:navigationBarColor"
        app:titleTextColor="?attr/android:textColorPrimary"
        android:minHeight="?attr/actionBarSize"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/aboutAppList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aboutAppToolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>
