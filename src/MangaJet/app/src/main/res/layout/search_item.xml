<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/search_suggestion_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="@dimen/half_inner_horizontal_margin"
        android:paddingTop="@dimen/half_inner_horizontal_margin"
        android:paddingStart="@dimen/half_inner_horizontal_margin"
        android:paddingEnd="@dimen/half_inner_horizontal_margin"
        android:layout_marginStart="@dimen/half_inner_horizontal_margin"
        android:layout_marginEnd="@dimen/half_inner_horizontal_margin"
        android:textSize="18sp"
        android:textColor="?attr/colorControlNormal"
        android:text="TITLE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
