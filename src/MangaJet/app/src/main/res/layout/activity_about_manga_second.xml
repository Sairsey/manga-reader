<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aboutMangaLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".aboutmanga.AboutMangaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/coverManga"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_marginStart="@dimen/inner_about_manga_horizontal_margin"
            android:layout_marginTop="@dimen/inner_about_manga_vertical_margin"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/inner_about_manga_horizontal_margin"
            android:layout_marginTop="@dimen/inner_about_manga_vertical_margin"
            android:layout_marginEnd="@dimen/inner_about_manga_horizontal_margin"
            android:text="SampleTitle"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/coverManga"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/authorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/inner_about_manga_horizontal_margin"
            android:layout_marginTop="@dimen/inner_about_manga_vertical_margin"
            android:text="Sample Author"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/coverManga"
            app:layout_constraintTop_toBottomOf="@+id/titleText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tagsAndButtonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainInfoLayout">

        <Button
            android:id="@+id/readMangaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/inner_about_manga_horizontal_margin"
            android:layout_marginTop="@dimen/inner_about_manga_vertical_margin"
            android:layout_marginEnd="@dimen/inner_about_manga_horizontal_margin"
            android:text="Read manga"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/descriptionLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagsAndButtonLayout">

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/inner_about_manga_horizontal_margin"
            android:layout_marginTop="@dimen/inner_about_manga_vertical_margin"
            android:text="Description"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fullDescriptionText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/inner_about_manga_horizontal_margin"
            android:layout_marginTop="@dimen/inner_about_manga_vertical_margin"
            android:layout_marginEnd="@dimen/inner_about_manga_horizontal_margin"
            android:layout_marginBottom="@dimen/inner_about_manga_vertical_margin"
            android:scrollbars="vertical"
            android:text="TextView"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
